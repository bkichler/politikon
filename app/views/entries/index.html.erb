<div class="row">
  <div class="booyah-box col-sm-5 offset-md-1">
    <h1>From the left</h1>
    <ul> 
        <% @lefts.each do |entry| %>
            <li>
                <%= entry.title %>
                <ul>
                    <li>
                        <%= entry.url %>
                    </li>
                </ul>
                <ul>
                    <li>
                        <i><%= time_ago_in_words(entry.published) %> ago</i>
                    </li>
                </ul>
            </li>
        <% end %>
    </ul>
        
  </div>

  <div class="booyah-box col-sm-5 col-md-push-1">
    <h1>From the right</h1>
        <ul> 
        <% @rights.each do |entry| %>
            <li>
                <%= entry.title %>
                <ul>
                    <li>
                        <%= entry.url %>
                    </li>
                </ul>
                <ul>
                    <li>
                        <i><%= time_ago_in_words(entry.published) %> ago</i>
                    </li>
                </ul>
            </li>
        <% end %>
    </ul>
  </div>
</div>

